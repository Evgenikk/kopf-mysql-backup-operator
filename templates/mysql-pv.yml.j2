apiVersion: v1
kind: PersistentVolume
metadata:
  name: {{ name }}
  labels:
    pv-usage: {{ name }}
spec:
  claimRef:
    namespace: default
  persistentVolumeReclaimPolicy: Retain
  accessModes:
    - ReadWriteOnce
  capacity:
    storage: {{ storage_size }}
  hostPath:
    path: /data/{{ name }}-pv/
